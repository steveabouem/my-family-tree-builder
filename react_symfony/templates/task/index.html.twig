{% extends 'base.html.twig' %}

{% block head %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('login') }}
    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('login') }}
    {% endblock %}
    {% block title %}Login{% endblock %}
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div id="root">
        <noscript class="text-center d-block p-4">{% trans %}You need to enable JavaScript to run this app{% endtrans %}</noscript>
    </div>

{% endblock %}
